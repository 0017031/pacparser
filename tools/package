#!/bin/bash -e

ver=$1
[ -z $ver ] && echo "Please specify package version." && exit

cd $(dirname $0); tools_dir=$PWD; cd - > /dev/null

pkg_dir=${tools_dir}/packages/pacparser-${ver}
pkg=${pkg_dir}.tar.gz

mkdir -p ${tools_dir}/packages
cd ${tools_dir}/..
hg archive -t tgz -X tools -X debian -X .hgtags $pkg
cd - > /dev/null

hg archive -t files -X tools -X .hgtags $pkg_dir
